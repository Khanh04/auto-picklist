# Railway Environment Configuration
# These variables will be automatically set by Railway
# Copy these to your Railway project environment variables

# PostgreSQL Database (automatically provided by Railway PostgreSQL service)
PGUSER=${{ PGUSER }}
PGHOST=${{ PGHOST }}
PGDATABASE=${{ PGDATABASE }}
PGPASSWORD=${{ PGPASSWORD }}
PGPORT=${{ PGPORT }}

# Legacy format for compatibility
DB_HOST=${{ PGHOST }}
DB_PORT=${{ PGPORT }}
DB_NAME=${{ PGDATABASE }}
DB_USER=${{ PGUSER }}
DB_PASSWORD=${{ PGPASSWORD }}

# Application Configuration
NODE_ENV=production
PORT=3000

# Migration Settings
MIGRATE_FROM_LOCAL=false

# Optional: File upload settings
MAX_FILE_SIZE=10485760
UPLOADS_DIR=uploads

# Security (set these in Railway dashboard)
# SESSION_SECRET=your_secure_session_secret_here

# Local database connection (only needed if MIGRATE_FROM_LOCAL=true)
# LOCAL_DB_HOST=your_local_host
# LOCAL_DB_PORT=5432
# LOCAL_DB_NAME=autopicklist
# LOCAL_DB_USER=postgres
# LOCAL_DB_PASSWORD=your_local_password