# Railway Environment Configuration
# These variables will be automatically set by Railway when you connect the PostgreSQL service
# Use these variable references in your Railway dashboard

# Primary Database URLs (Railway provides these automatically)
DATABASE_PUBLIC_URL="${{Postgres.DATABASE_PUBLIC_URL}}"
DATABASE_URL="${{Postgres.DATABASE_URL}}"

# PostgreSQL Service Variables (Railway provides these automatically)
PGDATA="${{Postgres.PGDATA}}"
PGDATABASE="${{Postgres.PGDATABASE}}"
PGHOST="${{Postgres.PGHOST}}"
PGPASSWORD="${{Postgres.PGPASSWORD}}"
PGPORT="${{Postgres.PGPORT}}"
PGUSER="${{Postgres.PGUSER}}"

# Individual PostgreSQL variables (for Railway compatibility)
POSTGRES_DB="${{Postgres.POSTGRES_DB}}"
POSTGRES_PASSWORD="${{Postgres.POSTGRES_PASSWORD}}"
POSTGRES_USER="${{Postgres.POSTGRES_USER}}"

# Railway-specific variables (auto-provided)
RAILWAY_PRIVATE_DOMAIN="${{Postgres.RAILWAY_PRIVATE_DOMAIN}}"
RAILWAY_TCP_PROXY_DOMAIN="${{Postgres.RAILWAY_TCP_PROXY_DOMAIN}}"
RAILWAY_TCP_PROXY_PORT="${{Postgres.RAILWAY_TCP_PROXY_PORT}}"

# Application Configuration
NODE_ENV=production
PORT=3000

# Migration Settings
MIGRATE_FROM_LOCAL=false

# Optional: File upload settings
MAX_FILE_SIZE=10485760
UPLOADS_DIR=uploads

# Security (set these in Railway dashboard)
# SESSION_SECRET=your_secure_session_secret_here

# Local database connection (only needed if MIGRATE_FROM_LOCAL=true)
# LOCAL_DB_HOST=your_local_host
# LOCAL_DB_PORT=5432
# LOCAL_DB_NAME=autopicklist
# LOCAL_DB_USER=postgres
# LOCAL_DB_PASSWORD=your_local_password